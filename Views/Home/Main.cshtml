@model JournalToDoApp.Models.MainPageViewModel

@{
    ViewData["Title"] = "Main Page";
}

<div class="book-container">
    <div class="page">
        <div class="half-page todo-list">
            <h2>To-Do List</h2>
            <ul>
                @foreach (var item in Model.ToDoItems)
                {
                    <li class="heart-bullet">@item.Task</li>
                }
            </ul>
        </div>
        <div class="half-page journal">
            <h2>Journal</h2>
            @foreach (var entry in Model.JournalEntries)
            {
                <div class="journal-entry">
                    <h3>@entry.Title</h3>
                    <p>@entry.Content</p>
                    <small>@entry.CreatedAt.ToString("MMMM dd, yyyy")</small>
                </div>
            }
        </div>
    </div>
</div>

<div class="pagination">
    <button class="btn btn-primary">&larr; Previous</button>
    <button class="btn btn-primary">Next &rarr;</button>
</div>

<style>
    .book-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
        background-color: #f5f5dc; /* beige paper color */
        border: 2px solid #ccc;
        margin: 20px;
        padding: 20px;
    }

    .page {
        display: flex;
        width: 100%;
        height: 100%;
        background-color: #f5f5dc; /* beige paper color */
        border: 1px solid #aaa;
    }

    .half-page {
        width: 50%;
        padding: 20px;
    }

    .todo-list {
        border-right: 2px solid #aaa; /* line down in the middle */
    }

    .journal {
        padding-left: 20px;
    }

    .heart-bullet {
        list-style-type: none;
        position: relative;
        padding-left: 20px;
    }

    .heart-bullet:before {
        content: "\2665";
        color: red;
        position: absolute;
        left: 0;
        top: 0;
    }

    .pagination {
        text-align: center;
        margin-top: 20px;
    }

    .journal-entry {
        margin-bottom: 20px;
    }
</style>
